<!-- res/drawable/edittext_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#FFFFFF" />

    <!-- Border -->
    <stroke
        android:width="1dp"
        android:color="#CCCCCC" />

    <!-- Rounded corners -->
    <corners android:radius="8dp" />

    <!-- Optional padding -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
